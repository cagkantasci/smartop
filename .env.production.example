# ========================================
# SMARTOP Production Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# ========================================

# ---- Database ----
POSTGRES_USER=smartop
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=smartop

# ---- Application ----
NODE_ENV=production
CORS_ORIGIN=https://smartop.com.tr

# ---- JWT Authentication ----
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ---- Frontend ----
# Leave empty if frontend proxies to backend via nginx
VITE_API_URL=

# ---- Firebase Push Notifications ----
# Get from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Paste the entire JSON as a single line (escape newlines in private_key)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token"}

# ---- Email (Optional - for password reset, notifications) ----
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@smartop.com.tr

# ---- S3/R2 Storage (Optional - for file uploads) ----
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
S3_BUCKET=smartop-uploads
# For Cloudflare R2:
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# ---- Gemini AI (Optional) ----
# GEMINI_API_KEY=
